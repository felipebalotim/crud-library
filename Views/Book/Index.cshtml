@model IEnumerable<library.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros dispon√≠veis</h1>

<p>
    <a asp-action="Create" data-toggle="tooltip" data-placement="bottom" title="Cadastrar novo livro">
        <i class="fas fa-plus"></i>
        Novo
    </a>
</p>
<table class="table table-striped table-sm">
    <thead>
        <tr class="text-center">
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Page)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Page)
            </td>
            <td class="text-center btn-action">
                <a class="btn btn-link text-primary" asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Editar">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a class="btn btn-link text-info" asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Detalhe">
                    <i class="fas fa-info"></i>
                </a>
                <a class="btn btn-link text-danger" asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Excluir">
                    <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
